<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/main_header_selector">

    <ImageView
        android:id="@+id/applogo"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:src="@drawable/pokemon_type_calculator_take_1" />

    <TextView
        android:id="@+id/initialPrompt"
        android:text="@string/initial_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="italic" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pov"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/povSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingHorizontal="2dp"
            android:spinnerMode="dropdown"
            android:textAlignment="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/secondPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:visibility="invisible"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/type1SpinnerAndLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/type1Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_type"
                android:paddingTop="10sp"/>

            <Spinner
                android:id="@+id/type1Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/type2SpinnerAndLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/type2Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/second_type"
                android:paddingTop="10sp" />

            <Spinner
                android:id="@+id/type2Spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:spinnerMode="dropdown" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/doesNotExistDisclaimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="@string/does_not_exist_disclaimer"
        android:textAlignment="center"
        android:gravity="bottom"
        android:padding="18sp"
        android:textStyle="italic"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tableHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="bottom"
        android:padding="12sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Switch
        android:id="@+id/gameSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/mainGame"
        android:textSize="20sp"
        android:visibility="visible"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <!--Type table-->

